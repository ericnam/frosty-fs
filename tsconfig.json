{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@data/*": ["data/*"],
      "@resolvers/*": ["resolvers/*"],
      "@schema/*": ["schema/*"]
    },
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "exclude": ["./node_modules", "./client"]
}
